#!/bin/sh

# Set the ulimit, then prove the new settings got there
ulimit -H -n 4096
ulimit -S -n 4096
chpst -u torquebox %> bash -c 'ulimit -S -a'

export LAUNCH_JBOSS_IN_BACKGROUND="true"

exec chpst -u torquebox <%= @options[:torquebox_dir] %>/jboss/bin/standalone.sh -b <%= @options[:bind_ip] %> --server-config <%= @options[:server_config] %> 2>&1
